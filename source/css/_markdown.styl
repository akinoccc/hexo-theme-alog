  // h2:target 
  // h3:target 
  // h4:target 
  // h5:target 
  // h6:target
  //   padding-top: 62px
  //   margin-top: -62px

  ol, ul 
    padding: 8px 15px
    li
      // margin: 4px 0
  ul 
    li 
      list-style: disc
  ol 
    li
      list-style: decimal

  img
    max-width: 100%
    max-height: 100%
    margin: 10px 0
    object-fit: contain
    cursor: pointer

  blockquote
    margin: 10px 0
    padding: 4px 10px
    border-left: 6px solid #6482f8
    background-color: #434343

  table
    th, td
      padding: 4px 15px
      border: 1px solid #ffffff

  // custom container
  .info, .tips, .success, .warning, .danger
    margin: 10px 0
    padding: 4px 10px
    border-radius: 4px
    color: $black-dim
  .info
    background-color: rgb(141, 141, 141)
    border-left: 6px solid rgb(101, 101, 101)
  .tips
    background-color: rgb(127, 167, 194)
    border-left: 6px solid rgb(44, 160, 237)
  .success
    background-color: rgb(202, 255, 231)
    border-left: 6px solid rgb(66, 185, 131)
  .warning
    background-color: rgb(255, 247, 208)
    border-left: 6px solid rgb(231, 192, 0)
  .danger
    background-color: rgb(255, 230, 230)
    border-left: 6px solid rgb(204, 0, 0)



